<!DOCTYPE html>
<html>
    <head>
        <title>Igra</title>
        
        <style>
            canvas {
                border:1px solid #000000;
                background-color: #f1f1f1;
            }
        </style>
        
        <script>
            var pieces = [];
            
            function getRandomInt(min, max) {
                return Math.floor(Math.random() * (max - min + 1)) + min;
            }

            let n = getRandomInt(5, 10);
            let g = n;
            let p = 0;
            
            function startGame() {
                for(i = 0; i < n; i++) {
                    pieces[i] = new component(40, 40, "red", getRandomInt(10, 670), getRandomInt(10, 470));
                }
                myGameArea.start();
            }
            
            var myGameArea = {
                canvas: document.createElement("canvas"),
                start: function() {
                    this.canvas.id = "myGameCanvas";
                    this.canvas.width = 700;
                    this.canvas.height = 500;
                    this.context = this.canvas.getContext("2d");
                    document.body.insertBefore(this.canvas, document.body.childNodes[0]);
                    this.frameNo = 0;
                    this.interval = setInterval(updateGameArea, 20);
                },
                stop: function() {
                    clearInterval(this.interval);
                },
                clear: function() {
                    this.context.clearRect(0, 0, this.canvas.width, this.canvas.height);
                }
            }

            myGameArea.canvas.addEventListener('click', function(event) {
                let x = event.clientX;
                let y = event.clientY;

                for(i = 0; i < n; i++) {
                    let k1 = pieces[i].x
                    let k2 = pieces[i].x + pieces[i].width
                    let k3 = pieces[i].y
                    let k4 = pieces[i].y + pieces[i].height
                    if(x >= k1 && x <= k2 && y >= k3 && y <= k4) {
                        pieces[i] = new component(0, 0, "black", 0, 0);
                        g--;
                        p++;
                    }
                }
            });
            
            function component(width, height, color, x, y, type) {
                let s = getRandomInt(2, 5);
                this.type = type;
                this.width = width;
                this.height = height;
                this.speed_x = s;
                this.speed_y = s;
                this.x = x;
                this.y = y;

                this.update = function() {
                    ctx = myGameArea.context;
                    ctx.font = "20px Georgia";
                    ctx.textAlign = "right";
                    ctx.fillText("Generirani: " + g.toString(), myGameArea.canvas.width, 20);
                    ctx.fillText("  PogoÄ‘eni: " + p.toString(), myGameArea.canvas.width, 40);

                    if(g == 0) {
                        ctx.font = "50px Georgia";
                        ctx.textAlign = "center";
                        ctx.fillText("KRAJ", myGameArea.canvas.width / 2, myGameArea.canvas.height / 2);
                    }

                    ctx.save();
                    ctx.translate(this.x, this.y);
                    ctx.fillStyle = color;
                    ctx.fillRect(this.width / -2, this.height / -2, this.width, this.height);
                    ctx.restore();
                }

                this.newPos = function() {
                    if(this.x - this.width / 2 < 0) {
                        this.speed_x = s;
                    } else if((this.x + this.width / 2) >= myGameArea.context.canvas.width) {
                        this.speed_x = -s;
                    }
                    
                    if(this.y - this.height / 2 < 0) {
                        this.speed_y = -s;
                    } else if((this.y + this.height / 2) >= myGameArea.context.canvas.height) {
                        this.speed_y = s;
                    }
                    
                    this.x += this.speed_x;
                    this.y -= this.speed_y;
                }
            }
            
            function updateGameArea() {
                myGameArea.clear();
                for(i = 0; i < n; i++) {
                    pieces[i].newPos();
                    pieces[i].update();
                }
            }
        </script>
    </head>
    
    <body onload="startGame()"></body>
</html>